<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="2024.06.01_add_table_user_tasks" author="Elvin Mehreliyev">
        <createTable schemaName="public" tableName="user_tasks">

            <column name="user_id" type = "int"/>
            <column name="task_id" type="int"/>






        </createTable>



        <addForeignKeyConstraint baseTableName="user_tasks" baseColumnNames="id" constraintName="FK_user_id"
                                 referencedTableName="tasks"

                                 referencedColumnNames="task_id"/>


    </changeSet>

</databaseChangeLog>